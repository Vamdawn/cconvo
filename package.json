{
  "name": "@vamdawn/cconvo",
  "version": "1.8.0",
  "description": "Interactive CLI tool to browse and export Claude Code conversations",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cconvo": "dist/index.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "scripts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build && pnpm typecheck",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "claude",
    "cli",
    "exporter",
    "conversation"
  ],
  "author": "vamdawn <vamdawn@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vamdawn/cconvo.git"
  },
  "bugs": {
    "url": "https://github.com/Vamdawn/cconvo/issues"
  },
  "homepage": "https://github.com/Vamdawn/cconvo#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "dayjs": "^1.11.13",
    "handlebars": "^4.7.8",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^4.0.18",
    "memfs": "^4.56.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
